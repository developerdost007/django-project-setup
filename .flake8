[flake8]
extend-ignore = C101,D403,F403,F405,I100,I201,W503,W504
exclude =
    **/migrations/*,
    .git,
    __pycache__,
    .mypy_cache,
    venv
    static
filename = *.py
accept-encodings = utf-8
inline-quote = single
max-complexity = 12
max-linenumber = 500
max-line-length = 200
multiple-quote = double
per-file-ignores =
    project_name/settings/templates/settings.dev.py:F821
